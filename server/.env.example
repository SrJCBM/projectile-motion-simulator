# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Timezone: UTC-5 (America/Bogota - Colombia/Peru/Ecuador)
# All timestamps stored in MongoDB are in UTC but displayed/handled in UTC-5

# MongoDB Connection
# Local: mongodb://localhost:27017/projectile-simulator
# Atlas: mongodb+srv://<user>:<password>@cluster.xxxxx.mongodb.net/projectile-simulator
MONGODB_URI=mongodb://localhost:27017/projectile-simulator

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:5500
